{% extends "layout-login.njk" %}

{% block head %}
    <title>Foodfy</title>
{% endblock %}

{% block content %}
    <section id="login" class="forgot-password">
        <h1>Esqueceu sua senha?</h1>

        <div class="fields">
            <form action="/forgot-password" method="POST">
                <div class="item">
                    <div>Email</div>
                        <input 
                            type="text"
                            name="email"
                            onblur="ValidateLogin.apply(this, 'isEmail')"
                            value="{{ user.email }}"
                            placeholder="Digite o email cadastrado"
                        >
                </div>
                
                <div class="buttons">
                    <button class="button">Recuperar</button>
                </div>
            </form>
        </div>
    </section>
{% endblock %}