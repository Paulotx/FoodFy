<div class="item">
    <div>Email</div>
        <input 
            type="text"
            name="email"
            onblur="ValidateLogin.apply(this, 'isEmail')"
            value="{{ user.email }}"
            placeholder="Digite o email"
        >
</div>

<div class="item">
    <div>Senha</div>
        <input 
            type="password"
            name="password"
            placeholder="Digite sua nova senha"
        >
</div>

<div class="item">
    <div>Repetir Senha</div>
        <input 
            type="password"
            name="passwordRepeat"
            placeholder="Repita a nova senha"
        >
</div>

<input type="hidden" name="token" value="{{ token }}">