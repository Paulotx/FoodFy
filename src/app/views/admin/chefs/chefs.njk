{% extends "layout-admin.njk" %}

{% block head %}
    <title>Chefs - Foodfy</title>
{% endblock %}

{% block content %}
    <section id="most-viewed">
        <div class="header-chef">
            <h1 class="title-admin">Gerenciar Receitas</h1>
            <a href="/admin/chefs/create" class="button button-criar">Novo</a>
        </div>
        
        <div class="chefs">

            {% for chef in chefs %}
                <div class="chef">
                    <div style="background: url({{ chef.avatar_url }}) no-repeat center center / cover;">
            
                    </div>
                    
                    <div>
                        <h3>{{ chef.name }}</h3>
                        <a href="/admin/chefs/{{ chef.id }}">Visualizar</a>
                    </div>                    
                </div>
            {% endfor %}
                 
        </div>
    </section>
{% endblock %}