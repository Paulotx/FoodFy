{% extends "layout-admin.njk" %}

{% block head %}
    <title>Receitas - Foodfy</title>
{% endblock %}

{% block content %}
    <section id="recipe-container">
        <div class="header-recipe">
            <span>Receita: {{ recipe.title }}</span>
            <a href="/admin/recipes/{{ recipe.id }}/edit" class="button">Editar receita</a>
        </div> 

        <div class="recipe-viewed">
            <div class="img" style="background: url({{ recipe.image }}) no-repeat center center / cover;"></div>
            <h1>{{ recipe.title }}</h1>
            <p>por {{ recipe.chef_id }}</p>
        </div>

        <div class="ingredients">
            <div class="title">
                <h2>Ingredientes</h2>
                <span class="hide-show">MOSTRAR</span>
            </div>
           
            <ul class="ingredients-list">

                {% for ingredient in recipe.ingredients %}
                    <li>{{ ingredient }}</li>
                {% endfor %}
            </ul>
        </div>

        <div class="preparation">
            <div class="title">
                <h2>Modo de Preparo</h2>
                <span class="hide-show">MOSTRAR</span>
            </div>
            
            <p>
                {% for preparation in recipe.preparation %}
                    {{ preparation }}
                {% endfor %}
            </p>
        </div>

        <div class="information">
            <div class="title">
                <h2>Informações Adicionais</h2>
                <span class="hide-show">MOSTRAR</span>
            </div>
            
            <p>
                {{ recipe.information }}
            </p>
        </div>
    </section>
{% endblock %}