{% extends "layout.njk" %}

{% block head %}
    <title>Receitas - Foodfy</title>
{% endblock %}

{% block content %}
    <section id="most-viewed">
        <h1>Receitas</h1>

        <div class="recipes">
            {% for recipe in recipes %}
                
                    <div class="recipe">
                        <a href="/recipes/{{ recipe.id }}">
                            <img src="{{ recipe.file.src }}" alt="Imagem de {{ recipe.file.name }}" class="burguer">
                        </a>
                        <h3>{{ recipe.title }}</h3>
                        <p>{{ recipe.chef_name }}</p>
                    </div>
                
            {% endfor %}
        </div>

        <div 
            class="pagination"
            data-page="{{ pagination.page }}"
            data-total="{{ pagination.total }}"
            data-filter="{{ filter }}"
        >
        </div>
    </section>
{% endblock %}