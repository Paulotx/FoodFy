{% extends "layout.njk" %}

{% block head %}
    <title>Receitas - Foodfy</title>
{% endblock %}

{% block content %}
    <section id="most-viewed">
        <h1>Mais acessadas</h1>

        <div class="recipes">
            {% for item in items %}
                <div class="recipe">
                    <img src="{{ item.image }}" alt="Imagem de {{ item.title }}" class="burguer">
                    <h3>{{ item.title }}</h3>
                    <p>{{ item.author }}</p>
                </div>
            {% endfor %}
        </div>
    </section>
{% endblock %}